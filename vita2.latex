% ============
% = Headings =
% ============

\usepackage[largestsep]{titlesec}  

% \titlespacing*{\LEVEL}{LEFT}{BEFORE}{AFTER}
\titlespacing*{\section}{0em}{.75em}{.5em}
\titlespacing*{\subsection}{0em}{.5em}{0em}
\titlespacing*{\subsubsection}{0em}{0em}{0em}
\titlespacing*{\paragraph}{0em}{0em}{0em}
\titlespacing*{\subparagraph}{0em}{0em}{0.1em}

\titleformat{\section}
  {\large\titlefont\raggedright}
  {}{0em}
  {}
  [\titlerule]

\titleformat{\subsection}
  {\normalsize\rmfamily\bfseries\raggedright}
  {}{0em}
  {}

\titleformat{\subsubsection}
  {\normalsize\rmfamily\bfseries\raggedright}
  {}{0em}
  {}

\titleformat{\paragraph}
  {\normalsize\itshape\raggedright}
  {}{0em}
  {} 

\titleformat{\subparagraph}
  {\normalsize\rmfamily\raggedright}
  {}{0em}
  {} 

\date{}




