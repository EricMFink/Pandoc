\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyfoot{}
\fancyfoot[C]{}
\fancyfoot[R]{\footnotesize {$author$} | Page {\thepage}}
\fancyfoot[L]{\tiny\texttt{Revised: \mydate\today}}
\fancyhead{}
\fancyhead[C]{}
\fancyhead[R]{}
\fancyhead[L]{}
